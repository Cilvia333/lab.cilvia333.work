{
  "presets": [
    [
      "next/babel",
      {
        "preset-react": { "runtime": "automatic" }
      }
    ]
  ],
  "plugins": [
    "babel-plugin-macros",
    [
      "module-resolver",         //  apply babel-plugin-module-resolver
      {
        "alias": {
          "~": "./src"
        }
      }
    ],
    "styled-components"
  ]
}